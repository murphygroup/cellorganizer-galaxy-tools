<tool id="model_training2" name="Train" version="0.0.3">
  <description> a generative model</description>
  <command>
    matlab -r "diary diary.txt;
    tic; 
    current_directory = pwd; 
    cellorganizer_directory = getenv('CELLORGANIZER'); 
    cd( cellorganizer_directory ); 
    setup(); 
    cd( current_directory );
    check_if_files_exist_on_disk_and_link_them('$dataset');

    #if str( $train.trainflag ) == "all"
      selection_flag('$dimensionality','nucleus','$train.nuc.nclasstype.nucleusclass','$train.nuc.nclasstype.nucleustype');
      selection_flag('$dimensionality','cell','$train.mem.cclasstype.cellclass','$train.mem.cclasstype.celltype');
      selection_flag('$dimensionality','protein','$train.pro.pclasstype.proteinclass','$train.pro.pclasstype.proteintype');
    #end if
    #if str( $train.trainflag ) == "framework"
      selection_flag('$dimensionality','nucleus','$train.nuc.nclasstype.nucleusclass','$train.nuc.nclasstype.nucleustype');
      selection_flag('$dimensionality','cell','$train.mem.cclasstype.cellclass','$train.mem.cclasstype.celltype');
    #end if
    #if str( $train.trainflag ) == "nuclear"
      selection_flag('$dimensionality','nucleus','$train.nuc.nclasstype.nucleusclass','$train.nuc.nclasstype.nucleustype');
    #end if

    documentation = struct();
    #for $field in $doc.documentation
      documentation = setfield( documentation, '${field.docname}', '${field.docvalues}' );
    #end for

    #if str( $train.trainflag ) == "all"
      train_model('$dimensionality','$maskchannel','$train.nuc.dnachannel','$train.mem.cellchannel','$train.pro.proteinchannel','$train.trainflag','$modelname','$modelid','$gen.downsamplex','$gen.downsampley','$gen.downsamplez','$train.nuc.nclasstype.nucleustype','$train.nuc.nucleusname','$train.nuc.nclasstype.nucleusclass','$train.nuc.nucleusid','$train.mem.cclasstype.celltype','$train.mem.cellname','$train.mem.cclasstype.cellclass','$train.mem.cellid','$train.pro.pclasstype.proteintype','$train.pro.proteinname','$train.pro.pclasstype.proteinclass','$train.pro.proteinid','$train.pro.proteincytonuclearflag',documentation,'$gen.verbose','$gen.debug');
    #end if
    #if str( $train.trainflag ) == "framework"
      train_model('$dimensionality','$maskchannel','$train.nuc.dnachannel','$train.mem.cellchannel','','$train.trainflag','$modelname','$modelid','$gen.downsamplex','$gen.downsampley','$gen.downsamplez','$train.nuc.nclasstype.nucleustype','$train.nuc.nucleusname','$train.nuc.nclasstype.nucleusclass','$train.nuc.nucleusid','$train.mem.cclasstype.celltype','$train.mem.cellname','$train.mem.cclasstype.cellclass','$train.mem.cellid','','','','','',documentation,'$gen.verbose','$gen.debug');
    #end if
    #if str( $train.trainflag ) == "nuclear"
      train_model('$dimensionality','$maskchannel','$train.nuc.dnachannel','','','$train.trainflag','$modelname','$modelid','$gen.downsamplex','$gen.downsampley','$gen.downsamplez','$train.nuc.nclasstype.nucleustype','$train.nuc.nucleusname','$train.nuc.nclasstype.nucleusclass','$train.nuc.nucleusid','','','','','','','','','',documentation,'$gen.verbose','$gen.debug');
    #end if

    toc,
    diary off;
    diary model_information.txt;
    if exist( './model.mat' ); load( './model.mat' ); model2info( model ); end;
    diary off;
    exit;";
    
    bash $__tool_directory__/train_model_report.sh $output2.extra_files_path;
  </command>
